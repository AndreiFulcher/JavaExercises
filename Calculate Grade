package application;

import application.entities.Student;

import java.util.Locale;
import java.util.Scanner;

public class javaCourse {
    public static void main(String[] args) {
        Locale.setDefault(Locale.US);
        Scanner sc = new Scanner(System.in);

        Student aluno = new Student();

        System.out.print("Digite seu nome:\n");
        aluno.name = sc.nextLine();

        System.out.print("Digite sua nota 1:\n");
        aluno.nota1 = sc.nextDouble();

        System.out.print("Digite sua nota 2:\n");
        aluno.nota2 = sc.nextDouble();

        System.out.print("Digite sua nota 3:\n");
        aluno.nota3 = sc.nextDouble();

        System.out.printf("FINAL GRADE = %.2f\n", aluno.notaFinal());

        if(aluno.notaFinal()<60.00){
            System.out.print("FAILED\n");
            System.out.printf("MISSING %.2f POINTS", aluno.notaFaltante());
        }else{
            System.out.print("PASS");
        }

        sc.close();
    }
}
package application.entities;

public class Student {

    public String name;
    public double nota1;
    public double nota2;
    public double nota3;

    public double notaFinal(){
        return nota1 + nota2 + nota3;
    }
    public double notaFaltante(){
        if(notaFinal() < 60.00){
            return 60.00 - notaFinal();
        }else{
            return 0.0;
        }
    }
}
