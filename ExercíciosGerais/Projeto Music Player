import javax.sound.sampled.*;
import java.io.File;
import java.io.FileNotFoundException;
import java.io.IOException;
import java.util.Scanner;

public class Java_Course {

    public static void main(String[] args) {

        String filePath = "Tom Odell - Another Love (Official Video).wav";
        File file = new File(filePath);

        try(Scanner scanner = new Scanner(System.in);
            AudioInputStream audioStream = AudioSystem.getAudioInputStream(file)) {

            Clip clip = AudioSystem.getClip();
            clip.open(audioStream);

            FloatControl volumeControl = (FloatControl) clip.getControl(FloatControl.Type.MASTER_GAIN);

            String resposta = "";

            while(!resposta.equals("Q")){
                System.out.println("P = Play");
                System.out.println("S = Stop");
                System.out.println("R = Reset");
                System.out.println("Q = Quit");
                System.out.println("+ = Aumentar o volume");
                System.out.println("- = Diminuir o volume");
                System.out.print("Selecione a opção: ");

                resposta = scanner.next().toUpperCase();

                switch (resposta){
                    case "P" -> clip.start();
                    case "S" -> clip.stop();
                    case "R" -> clip.setMicrosecondPosition(0);
                    case "Q" -> clip.close();
                    case "+" -> {
                        float volume = volumeControl.getValue();
                        float max = volumeControl.getMaximum();
                        if (volume < max) {
                            volumeControl.setValue(volume + 5.0f);
                            System.out.println("Volume aumentado!");
                        } else {
                            System.out.println("Volume já está no máximo!");
                        }
                    }
                    case "-" -> {
                        float volume = volumeControl.getValue();
                        float min = volumeControl.getMinimum();
                        if (volume > min) {
                            volumeControl.setValue(volume - 5.0f);
                            System.out.println("Volume diminuído!");
                        } else {
                            System.out.println("Volume já está no mínimo!");
                        }
                    }
                    default -> System.out.println("Escolha inválida!");
                }
            }
        }catch (FileNotFoundException e){
            System.out.println("Não foi possível acessar o arquivo!");
        }catch(IOException e){
            System.out.println("Algo deu errado!");
        } catch (UnsupportedAudioFileException e) {
            System.out.println("O arquivo de áudio não suportado!");
        }catch (LineUnavailableException e){
            System.out.println("Não foi possível acessar o recurso de áudio e importar a classe!");
        }finally{
            System.out.println("Até logo!");
        }
    }
}
