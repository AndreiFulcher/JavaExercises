package application;

import application.entities.Rectangle;

import java.util.Locale;
import java.util.Scanner;

public class javaCourse {
    public static void main(String[] args) {
        Locale.setDefault(Locale.US);
        Scanner sc = new Scanner(System.in);

        Rectangle retangulo = new Rectangle();

        System.out.print("Digite a largura:\n");
        retangulo.larg = sc.nextDouble();

        System.out.print("Digite o comprimento:\n");
        retangulo.comp = sc.nextDouble();

        System.out.printf("Area = %.2f\n", retangulo.Area());
        System.out.printf("Perimetro = %.2f\n", retangulo.Perimeter());
        System.out.printf("Diagonal = %.2f\n", retangulo.Diagonal());

        sc.close();
    }
}

package application.entities;

public class Rectangle {

    public double larg;
    public double comp;

    public double Area(){
        return comp * larg;
    }
    public double Perimeter(){
        return (comp * 2) + (larg * 2);
    }
    public double Diagonal() {
        return Math.sqrt(comp * comp + larg * larg);
    }
}
