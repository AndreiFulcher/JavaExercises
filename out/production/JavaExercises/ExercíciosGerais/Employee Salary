package application;

import application.entities.Employee;

import java.util.Locale;
import java.util.Scanner;

public class javaCourse {
    public static void main(String[] args) {
        Locale.setDefault(Locale.US);
        Scanner sc = new Scanner(System.in);

        Employee empregado = new Employee();

        System.out.print("Digite seu nome:\n");
        empregado.name = sc.nextLine();

        System.out.print("Digite seu sal√°rio bruto:\n");
        empregado.bruto = sc.nextDouble();

        System.out.print("Digite seu imposto:\n");
        empregado.imposto = sc.nextDouble();

        System.out.printf("Employee: %s, RS %.2f", empregado.name, empregado.netSalary());

        System.out.println();
        System.out.print("Which percentage to increase salary? ");
        double percentage = sc.nextDouble();

        empregado.increaseSalary(percentage);

        System.out.printf("\nUpdated data: %s, RS %.2f", empregado.name, empregado.netSalary());

        sc.close();
    }
}
package application.entities;

public class Employee {

    public String name;
    public double bruto;
    public double imposto;

    public double netSalary(){
        return bruto - imposto;
    }
    public String toString(){
        return String.format("%s, RS %.2f", name, netSalary());
    }
    public void increaseSalary(double percentage){
        bruto += (percentage / 100) * bruto;
    }
}
