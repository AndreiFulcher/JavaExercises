package application;

import application.entities.CurrencyConverter;

import java.util.Locale;
import java.util.Scanner;

public class javaCourse {
    public static void main(String[] args) {
        Locale.setDefault(Locale.US);
        Scanner sc = new Scanner(System.in);

        CurrencyConverter convert = new CurrencyConverter();

        System.out.print("Qual o valor do dolar:\n");
        convert.dollar = sc.nextDouble();
        System.out.print("Quanto dolares deseja comprar?\n");
        convert.buyDollar = sc.nextDouble();

        System.out.printf("The dollar price is: %.2f\n", convert.dollar);
        System.out.printf("You bought: %.2f dollar\n", convert.buyDollar);
        System.out.printf("The total amount to pay is: %.2f\n", convert.totalPay());

        sc.close();
    }
}

package application.entities;

public class CurrencyConverter {

    public double dollar;
    public double buyDollar;

    public double totalPay(){
        return (dollar * buyDollar) * 1.06;
    }
}
