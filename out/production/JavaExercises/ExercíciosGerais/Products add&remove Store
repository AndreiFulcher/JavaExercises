package application;

import application.entities.Product;

import java.util.Locale;
import java.util.Scanner;

public class javaCourse {
    public static void main(String[] args) {
        Locale.setDefault(Locale.US);
        Scanner sc = new Scanner(System.in);

        Product product = new Product();

        System.out.print("Digite o nome do produto:\n");
        product.name = sc.nextLine();

        System.out.print("Digite o pre√ßo do produto:\n");
        product.price = sc.nextDouble();

        System.out.print("Digite qtd do produto:\n");
        product.quantity = sc.nextInt();

        System.out.print("\nDados do produto:\n");
        System.out.println(product);

        System.out.print("\nDigite q qtd de produtos para serem add no estoque:\n");
        int quantity = sc.nextInt();
        product.addProducts(quantity);

        System.out.print("\nDados att:\n");
        System.out.println(product);

        System.out.print("\nDigite q qtd de produtos para serem retirados no estoque:\n");
        quantity = sc.nextInt();
        product.removeProducts(quantity);

        System.out.print("\nDados att:\n");
        System.out.println(product);

        sc.close();
    }
}

package application.entities;

public class Product {

    public String name;
    public double price;
    public int quantity;

    public double totalValueInStock(){
        return price * quantity;
    }

    public void addProducts(int quantity){
        this.quantity += quantity;
    }
    public void removeProducts(int quantity){
        this.quantity -= quantity;
    }

    public String toString(){
        return String.format("%s, RS %.2f, %d units, Total: RS %.2f\n", name, price, quantity, totalValueInStock());
    }
}

